#!/usr/bin/env sh
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E "\.(js|ts|jsx|tsx)$")

if [[ "$STAGED_FILES" = "" ]]; then
  exit 0
fi

PASS=true

echo "ğŸ”„ Validating Javascript:"

for FILE in $STAGED_FILES
do
  yarn eslint "$FILE"

  if [[ "$?" == 0 ]]; then
    echo "âœ… ESLint Passed: $FILE"
  else
    echo "âŒ ESLint Failed: $FILE"
    PASS=false
  fi
done

echo "ğŸ Javascript validation completed!"

if ! $PASS; then
  echo "âŒ COMMIT FAILED: Your commit contains files that should pass ESLint but do not. Please fix the ESLint errors and try again"
  exit 1
else
  echo "âœ… COMMIT SUCCEEDED"
fi

exit $?
